<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".general.DisplayMoreInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/light_yellow"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="More Information"
            android:textStyle="bold"
            android:layout_marginTop="19dp"
            android:gravity="center"
            android:textSize="16sp"/>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:text="Name:"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                />
            <TextView
                android:id="@+id/more_info_name"
                android:text="Placeholder"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:text="Roll No:"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                />
            <TextView
                android:id="@+id/more_info_roll_no"
                android:text="Placeholder"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:text="Enrollment:"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                />
            <TextView
                android:id="@+id/more_info_enrollment"
                android:text="Placeholder"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:text="Age:"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                />
            <TextView
                android:id="@+id/more_info_age"
                android:text="Placeholder"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:text="Email:"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                />
            <TextView
                android:id="@+id/more_info_email"
                android:text="Placeholder"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:text="Branch:"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                />
            <TextView
                android:id="@+id/more_info_branch"
                android:text="Placeholder"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:text="Year:"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                />
            <TextView
                android:id="@+id/more_info_year"
                android:text="Placeholder"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:text="Phone:"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                />
            <TextView
                android:id="@+id/more_info_phone"
                android:text="Placeholder"
                android:textSize="20dp"
                android:layout_weight="1"
                android:gravity="center"
                />
        </TableRow>
    </TableLayout>
</RelativeLayout>