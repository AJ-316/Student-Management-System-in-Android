<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".general.DisplayMoreInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/light_yellow"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Information"
            android:textStyle="bold"
            android:layout_marginTop="19dp"
            android:gravity="center"
            android:textSize="24sp"/>
    </LinearLayout>

    <TableLayout
        android:id="@+id/add_table_layout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="70dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:text="Name:"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                />
            <EditText
                android:id="@+id/add_name"
                android:hint="Enter Name"
                android:textSize="18dp"
                android:layout_weight="1"
                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:text="Roll No:"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                />
            <EditText
                android:id="@+id/add_roll_no"
                android:hint="Enter Roll No"
                android:textSize="18dp"
                android:layout_weight="1"
                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:text="Enrollment:"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                />
            <EditText
                android:id="@+id/add_enroll_no"
                android:hint="Enter Enrollment No"
                android:textSize="18dp"
                android:layout_weight="1"
                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:text="Age:"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                />
            <EditText
                android:id="@+id/add_age"
                android:hint="Enter Age"
                android:textSize="18dp"
                android:layout_weight="1"
                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:text="Email:"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                />
            <EditText
                android:id="@+id/add_email"
                android:hint="Enter Email"
                android:textSize="18dp"
                android:layout_weight="1"
                android:gravity="center"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:text="Branch:"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                />
            <EditText
                android:id="@+id/add_branch"
                android:hint="Enter Branch"
                android:textSize="18dp"
                android:layout_weight="1"
                android:gravity="center"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:text="Year:"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                />
            <EditText
                android:id="@+id/add_year"
                android:hint="Enter Year"
                android:textSize="18dp"
                android:layout_weight="1"
                android:gravity="center"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <TextView
                android:text="Phone:"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                />
            <EditText
                android:id="@+id/add_phone"
                android:hint="Enter Phone No."
                android:textSize="18dp"
                android:layout_weight="1"
                android:gravity="center"
                />
        </TableRow>
    </TableLayout>
    <Button
        android:id="@+id/add_submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_table_layout"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        />
</RelativeLayout>